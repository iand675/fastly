# direnv configuration for automatic Nix environment loading
#
# When you cd into this directory with direnv enabled,
# it will automatically load the Nix development environment.
#
# Install direnv: https://direnv.net/
# Enable for this directory: direnv allow

# Use flakes if available, otherwise fall back to shell.nix
if has nix_direnv_version || has nix; then
  # Try to use flake (requires Nix with flakes enabled)
  if has nix && nix flake metadata &> /dev/null; then
    use flake
  else
    # Fall back to shell.nix
    use nix
  fi
fi
